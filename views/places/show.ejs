
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">SkyDive</p>
            <div class="list-group">
                <li class="list-group-item active">Info One</li>
                <li class="list-group-item">Info Two</li>
                <li class="list-group-item">Info Three</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= place.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$200.00/dive</h4>
                    <h4><a><%=place.name%></a></h4>
                    <p><%= place.description %></p>
                    <p> 
                        <em> Submitted by <%= place.author.username %></em> 
                    </p>
                    <% if(currentUser && place.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/places/<%= place._id %>/edit">Edit</a>
                        <form id="delete-form" action="/places/<%= place._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>

                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/places/<%= place._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% place.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"> 3 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>